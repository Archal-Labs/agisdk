{
  "id": "gomail-opendining-1",
  "goal": "Make an upcoming reservation at 'La Trattoria' in OpenDining for 6 PM on Friday for three people and forward the details to my assistant at chloe.b@gomail.com so she can arrange my transport. The subject should be 'Dinner Reservation Details'.",
  "websites": [
    {
      "id": "gomail",
      "name": "GoMail",
      "similarTo": "Gmail",
      "previewImage": "/websitePreviews/gomail_preview.jpg",
      "url": "https://real-gomail.vercel.app"
    },
    {
      "id": "opendining",
      "name": "OpenDining",
      "similarTo": "OpenTable",
      "previewImage": "/websitePreviews/opendining_preview.jpg",
      "url": "https://real-opendining.vercel.app"
    }
  ],
  "difficulty": "hard",
  "challengeType": "action",
  "possible": true,
  "evals": [
    {
      "description": "Verify an email was sent.",
      "type": "jmespath",
      "query": "length(gomail.differences.emails.added[?sent == `true`]) >= `1`",
      "expected_value": true
    },
    {
      "description": "Verify the sent email's recipient is chloe.b@gomail.com.",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].recipient, 'chloe.b@gomail.com')",
      "expected_value": true
    },
    {
      "description": "Verify the sent email's subject is 'Dinner Reservation Details'.",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].subject, 'Dinner Reservation Details')",
      "expected_value": true
    },
    {
      "description": "Verify the sent email's content includes 'La Trattoria' (indicating reservation details were forwarded).",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].content, 'La Trattoria')",
      "expected_value": true
    }
  ],
  "points": 2,
  "config": {}
}
