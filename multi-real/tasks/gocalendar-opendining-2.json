{
  "id": "gocalendar-opendining-2",
  "goal": "Find a reservation for two at a highly-rated sushi shop for tomorrow evening. Book it, then create a calendar event for it. In the calendar event's notes, please add the restaurant's full address and the reservation confirmation ID.",
  "websites": [
    {
      "id": "gocalendar",
      "name": "GoCalendar",
      "similarTo": "Google Calendar",
      "previewImage": "/websitePreviews/gocalendar_preview.jpg",
      "url": "https://real-gocalendar.vercel.app"
    },
    {
      "id": "opendining",
      "name": "OpenDining",
      "similarTo": "OpenTable",
      "previewImage": "/websitePreviews/opendining_preview.jpg",
      "url": "https://real-opendining.vercel.app"
    }
  ],
  "difficulty": "hard",
  "challengeType": "action",
  "possible": true,
  "evals": [
    {
      "description": "Verify that a reservation was successfully made for two people at a restaurant.",
      "type": "jmespath",
      "query": "(length(opendining.differences.bookings.added) >= `1` || length(opendining.differences.bookings.updated) >= `1`) && opendining.differences.bookings.updated[0].guests == `2`",
      "expected_value": true
    },
    {
      "description": "Verify that a calendar event was created for the reservation.",
      "type": "jmespath",
      "query": "length(gocalendar.differences.events.added) >= `1`",
      "expected_value": true
    },
    {
      "description": "Verify the calendar event's notes contain the restaurant's full address.",
      "type": "jmespath",
      "query": "gocalendar.differences.events.added.values(@)[0].notes != null && length(gocalendar.differences.events.added.values(@)[0].notes) > `10`",
      "expected_value": true
    },
    {
      "description": "Verify the calendar event's notes contain the reservation confirmation ID.",
      "type": "jmespath",
      "query": "contains(gocalendar.differences.events.added.values(@)[0].notes || '', 'confirm') || contains(gocalendar.differences.events.added.values(@)[0].notes || '', 'Confirm') || contains(gocalendar.differences.events.added.values(@)[0].notes || '', 'RES')",
      "expected_value": true
    }
  ],
  "points": 2,
  "config": {}
}
