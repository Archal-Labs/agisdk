{
  "id": "gomail-marrisuite-2",
  "goal": "For our team offsite in Miami from Feb 10-13 next year, find all Marrisuite locations that have both a swimming pool and a conference room. Draft an email to the team alias 'dev-team@mycompany.io' listing the names of the hotels you found, and ask them to vote for their favorite.",
  "websites": [
    {
      "id": "gomail",
      "name": "GoMail",
      "similarTo": "Gmail",
      "previewImage": "/websitePreviews/gomail_preview.jpg",
      "url": "https://real-gomail.vercel.app"
    },
    {
      "id": "marrisuite",
      "name": "Marrisuite",
      "similarTo": "Marriott",
      "previewImage": "/websitePreviews/marrisuite_preview.jpg",
      "url": "https://real-marrisuite.vercel.app"
    }
  ],
  "difficulty": "hard",
  "challengeType": "action",
  "possible": true,
  "evals": [
    {
      "description": "Verify that at least one Marrisuite hotel location was identified with the required amenities.",
      "type": "jmespath",
      "query": "length(marrisuite.bookingDetailsDiff.added) >= `1`",
      "expected_value": true
    },
    {
      "description": "Verify that an email was sent to the dev team alias.",
      "type": "jmespath",
      "query": "gomail.differences.emails.added[?sent == `true`][0].to[0]",
      "expected_value": true
    },
    {
      "description": "Verify that the email subject indicates hotels for the Miami offsite.",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].subject, 'Miami Offsite Hotels') || contains(gomail.differences.emails.added[?sent == `true`][0].subject, 'Marrisuite Locations')",
      "expected_value": true
    },
    {
      "description": "Verify that the email content lists hotel names and asks the team to vote for their favorite.",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].content, 'hotel names') && contains(gomail.differences.emails.added[?sent == `true`][0].content, 'vote for your favorite')",
      "expected_value": true
    }
  ],
  "points": 2,
  "config": {}
}
