  "evals": [
    {
      "description": "Verify that an email was sent to the financial advisor.",
      "type": "jmespath",
      "query": "length(gomail.differences.emails.added[?sent == `true` && contains(to[0] || '', 'f.advisor@consult.com')]) >= `1`",
      "expected_value": true
    },
    {
      "description": "Verify that the sent email's subject indicates an office chair review.",
      "type": "jmespath",
      "query": "length(gomail.differences.emails.added[?sent == `true` && contains(to[0] || '', 'f.advisor') && (contains(subject, 'chair') || contains(subject, 'Chair'))]) >= `1`",
      "expected_value": true
    },
    {
      "description": "Verify that the email content includes at least three product links, indicating chairs were found.",
      "type": "jmespath",
      "query": "length(gomail.differences.emails.added[?sent == `true` && contains(to[0] || '', 'f.advisor') && contains(content, 'http')]) >= `1`",
      "expected_value": true
    },
    {
      "description": "Verify that a calendar event was added with the correct title.",
      "type": "jmespath",
      "query": "contains(gocalendar.differences.events.added.values(@)[0].title, 'Make final office chair purchase decision')",
      "expected_value": true
    },
    {
      "description": "Verify that the calendar event is scheduled for next Tuesday afternoon and is 1 hour long.",
      "type": "jmespath",
      "query": "length(gocalendar.differences.events.added.values(@)[?contains(title, 'office chair') || contains(title, 'Office chair') || contains(title, 'chair purchase')]) >= `1`",
      "expected_value": true
    }
  ],
