{
  "id": "gomail-opendining-3",
  "goal": "I need to plan a team dinner. Look on OpenDining for a vegan-friendly restaurant for a party of 8 next Wednesday at 7 PM. Once you find one available option, email the restaurant's name and the proposed time to kenji@gomail.com and anita.r@gomail.com, asking them to confirm the time works.",
  "websites": [
    {
      "id": "gomail",
      "name": "GoMail",
      "similarTo": "Gmail",
      "previewImage": "/websitePreviews/gomail_preview.jpg",
      "url": "https://real-gomail.vercel.app"
    },
    {
      "id": "opendining",
      "name": "OpenDining",
      "similarTo": "OpenTable",
      "previewImage": "/websitePreviews/opendining_preview.jpg",
      "url": "https://real-opendining.vercel.app"
    }
  ],
  "difficulty": "hard",
  "challengeType": "action",
  "possible": true,
  "evals": [
    {
      "description": "Verify that a restaurant booking or identification was made in OpenDining for a party of 8 people.",
      "type": "jmespath",
      "query": "opendining.differences.bookings.added[0].partySize != null",
      "expected_value": true
    },
    {
      "description": "Verify that at least one email was sent from gomail.",
      "type": "jmespath",
      "query": "length(gomail.differences.emails.added[?sent == `true`])",
      "expected_value": true
    },
    {
      "description": "Verify that an email was sent to kenji@gomail.com.",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].recipient, 'kenji@gomail.com')",
      "expected_value": true
    },
    {
      "description": "Verify that an email was sent to anita.r@gomail.com.",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].recipient, 'anita.r@gomail.com')",
      "expected_value": true
    },
    {
      "description": "Verify the email content includes 'Wednesday', '7 PM', and asks for confirmation (e.g., 'confirm' or 'works').",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].content, 'Wednesday') && contains(gomail.differences.emails.added[?sent == `true`][0].content, '7 PM') && (contains(gomail.differences.emails.added[?sent == `true`][0].content, 'confirm') || contains(gomail.differences.emails.added[?sent == `true`][0].content, 'works'))",
      "expected_value": true
    }
  ],
  "points": 2,
  "config": {}
}