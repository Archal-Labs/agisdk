      "expected_value": true
    },
    {
      "description": "Verify the email content includes the property's address, sale price, and sale date.",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].content, 'Address:') && contains(gomail.differences.emails.added[?sent == `true`][0].content, 'Sale Price:') && contains(gomail.differences.emails.added[?sent == `true`][0].content, 'Sale Date:')",
