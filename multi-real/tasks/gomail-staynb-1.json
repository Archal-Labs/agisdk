{
  "id": "gomail-staynb-1",
  "goal": "I have a work trip booked at 'The Pearl District Condo' in Portland. I need to find the cancellation policy for this booking on StaynB and email my findings to the finance department at finance.dept@corporate.com, specifically stating the last day for a full refund.",
  "websites": [
    {
      "id": "gomail",
      "name": "GoMail",
      "similarTo": "Gmail",
      "previewImage": "/websitePreviews/gomail_preview.jpg",
      "url": "https://real-gomail.vercel.app"
    },
    {
      "id": "staynb",
      "name": "StaynB",
      "similarTo": "Airbnb",
      "previewImage": "/websitePreviews/staynb_preview.jpg",
      "url": "https://real-staynb.vercel.app"
    }
  ],
  "difficulty": "hard",
  "challengeType": "action",
  "possible": true,
  "evals": [
    {
      "description": "Verify that an email was sent to the finance department.",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].to[0] || '', 'finance.dept@corporate.com')",
      "expected_value": true
    },
    {
      "description": "Verify that the subject of the sent email is relevant to the task (cancellation policy and property name).",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].subject, 'Cancellation Policy') && contains(gomail.differences.emails.added[?sent == `true`][0].subject, 'The Pearl District Condo')",
      "expected_value": true
    },
    {
      "description": "Verify that the email body explicitly states the last day for a full refund.",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].content, 'last day for a full refund')",
      "expected_value": true
    }
  ],
  "points": 2,
  "config": {}
}
