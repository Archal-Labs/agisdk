{
  "id": "gomail-topwork-2",
  "goal": "The 'Python Data Analysis' job posting isn't getting much traction. Find it on TopWork, copy the public URL for the posting, then open GoMail and draft a message to social.media.team@mycorp.com. In the email, paste the link and ask them to start a promotional campaign on NetworkIn.",
  "websites": [
    {
      "id": "gomail",
      "name": "GoMail",
      "similarTo": "Gmail",
      "previewImage": "/websitePreviews/gomail_preview.jpg",
      "url": "https://real-gomail.vercel.app"
    },
    {
      "id": "topwork",
      "name": "TopWork",
      "similarTo": "Indeed",
      "previewImage": "/websitePreviews/topwork_preview.jpg",
      "url": "https://real-topwork.vercel.app"
    }
  ],
  "difficulty": "hard",
  "challengeType": "action",
  "possible": true,
  "evals": [
    {
      "description": "Verify that an email was sent from GoMail.",
      "type": "jmespath",
      "query": "length(gomail.differences.emails.added[?sent == `true`]) >= `1`",
      "expected_value": true
    },
    {
      "description": "Verify the email was sent to the correct recipient.",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].recipient, 'social.media.team@mycorp.com')",
      "expected_value": true
    },
    {
      "description": "Verify the email content includes a TopWork job posting URL for 'Python Data Analysis'.",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].content, 'topwork.com/jobs') && contains(gomail.differences.emails.added[?sent == `true`][0].content, 'Python Data Analysis')",
      "expected_value": true
    },
    {
      "description": "Verify the email content requests a promotional campaign on NetworkIn.",
      "type": "jmespath",
      "query": "contains(gomail.differences.emails.added[?sent == `true`][0].content, 'promotional campaign on NetworkIn')",
      "expected_value": true
    }
  ],
  "points": 2,
  "config": {}
}