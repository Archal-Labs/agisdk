{
  "id": "gocalendar-gomail-opendining-1",
  "goal": "Search for two highly-rated Italian restaurants that have availability for a party of 4 this Saturday evening. Email the names and booking links of the two options to my executive assistant at 'alex.chen@gomail.com' so they can make the final choice. Also, put a placeholder on my calendar for Saturday at 8 PM named 'Potential Dinner Engagement'.",
  "websites": [
    {
      "id": "gocalendar",
      "name": "GoCalendar",
      "similarTo": "Google Calendar",
      "previewImage": "/websitePreviews/gocalendar_preview.jpg",
      "url": "https://real-gocalendar.vercel.app"
    },
    {
      "id": "gomail",
      "name": "GoMail",
      "similarTo": "Gmail",
      "previewImage": "/websitePreviews/gomail_preview.jpg",
      "url": "https://real-gomail.vercel.app"
    },
    {
      "id": "opendining",
      "name": "OpenDining",
      "similarTo": "OpenTable",
      "previewImage": "/websitePreviews/opendining_preview.jpg",
      "url": "https://real-opendining.vercel.app"
    }
  ],
  "difficulty": "hard",
  "challengeType": "action",
  "possible": true,
  "evals": [
    {
      "description": "Verify a calendar event named 'Potential Dinner Engagement' is added for Saturday at 8 PM.",
      "type": "jmespath",
      "query": "gocalendar.differences.events.added.values(@)[?contains(title, 'Potential Dinner Engagement') && contains(start.dateTime, 'T20:00:00')] | length(@) >= `1`",
      "expected_value": true
    },
    {
      "description": "Verify an email was sent to 'alex.chen@gomail.com'.",
      "type": "jmespath",
      "query": "gomail.differences.emails.added[?sent == `true` && contains(to[0] || '', 'alex.chen@gomail.com')].to[0]",
      "expected_value": true
    },
    {
      "description": "Verify the sent email's subject is relevant to restaurant options and its content includes booking links.",
      "type": "jmespath",
      "query": "length(gomail.differences.emails.added[?sent == `true`]) >= `1` && contains(gomail.differences.emails.added[?sent == `true`][0].subject, 'Restaurant Options') && contains(gomail.differences.emails.added[?sent == `true`][0].content, 'booking links')",
      "expected_value": true
    }
  ],
  "points": 2,
  "config": {}
}
