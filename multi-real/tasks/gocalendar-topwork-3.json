{
  "id": "gocalendar-topwork-3",
  "goal": "Can you go to TopWork and post a new job for the 'Product Manager' role? After you've done that, put a reminder on my calendar for one week from today at 10 AM to 'Check Product Manager role applicants'.",
  "websites": [
    {
      "id": "gocalendar",
      "name": "GoCalendar",
      "similarTo": "Google Calendar",
      "previewImage": "/websitePreviews/gocalendar_preview.jpg",
      "url": "https://real-gocalendar.vercel.app"
    },
    {
      "id": "topwork",
      "name": "TopWork",
      "similarTo": "Indeed",
      "previewImage": "/websitePreviews/topwork_preview.jpg",
      "url": "https://real-topwork.vercel.app"
    }
  ],
  "difficulty": "hard",
  "challengeType": "action",
  "possible": true,
  "evals": [
    {
      "description": "Verify that a new job posting for 'Python Data Scientist' was created on TopWork.",
      "type": "jmespath",
      "query": "length(values(topwork.initialfinaldiff.added.jobs.jobs || `{}`)[?contains(title || '', 'Product Manager')]) >= `1`",
      "expected_value": true
    },
    {
      "description": "Verify that a new reminder event was added to gocalendar.",
      "type": "jmespath",
      "query": "length(gocalendar.differences.events.added) >= `1`",
      "expected_value": true
    },
    {
      "description": "Verify the calendar reminder's title is 'Check Python role applicants' and it is scheduled for 10 AM.",
      "type": "jmespath",
      "query": "contains(gocalendar.differences.events.added.values(@)[0].title, 'Check Python role applicants') && contains(gocalendar.differences.events.added.values(@)[0].start.dateTime, 'T10:00:00')",
      "expected_value": true
    }
  ],
  "points": 2,
  "config": {}
}
